<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolarAppUI.Views.Login"
             Title="Login">
    <Grid Margin="20">
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="logo.png"
                   WidthRequest="200" 
                   HeightRequest="200" 
                   Aspect="AspectFill"
                   HorizontalOptions="Center"/>

            <Label FontSize="24" Text="SOLARAPP" Margin="20,10,0,20" HorizontalTextAlignment="Center"/>

            <Label Text="Usuario:" Margin="0,10,0,5"/>
            <Entry x:Name="txtUsername" WidthRequest="200" HeightRequest="30" Margin="0,0,0,10"/>

            <Label Text="Contraseña:" Margin="0,10,0,5"/>
            <Entry x:Name="txtPassword" IsPassword="True" WidthRequest="200" HeightRequest="30" Margin="0,0,0,20"/>

            <Button Text="Iniciar Sesión" WidthRequest="200" HeightRequest="30" Clicked="LoginButton_Click"/>
        </StackLayout>
    </Grid>
</ContentPage>
